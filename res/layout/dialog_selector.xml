<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dnt_dialog_width"
    android:layout_height="@dimen/dnt_dialog_height"
    android:background="@drawable/bkg_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_selector_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dnt_margin"
        android:layout_marginLeft="@dimen/dnt_margin"
        android:layout_marginRight="@dimen/dnt_margin"
        android:layout_marginStart="@dimen/dnt_margin"
        android:layout_marginTop="@dimen/dnt_margin"
        android:gravity="center"
        android:text="@string/dnt_helper_buddy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

    <GridView
        android:id="@+id/gv_selector_buddies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dnt_margin"
        android:gravity="center"
        android:listSelector="#00000000"
        android:numColumns="3" >
    </GridView>

</LinearLayout>