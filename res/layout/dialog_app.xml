<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:background="@drawable/bkg_app" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dnt_padding" >

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/dnt_app_size"
            android:layout_height="@dimen/dnt_app_size"
            android:contentDescription="@drawable/img_game"
            android:src="@drawable/img_game" />

        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_app_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bt_app_download"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_option"
            android:text="@string/dnt_download"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_app_close"
        android:layout_width="@dimen/dnt_close_size"
        android:layout_height="@dimen/dnt_close_size"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dnt_close_margin"
        android:background="@drawable/btn_close" />

</FrameLayout>