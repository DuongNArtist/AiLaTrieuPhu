<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dialog_select_week"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/bt_week_icon"
        android:layout_width="@dimen/dnt_week_size"
        android:layout_height="@dimen/dnt_week_size"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/img_week_0"
        android:contentDescription="@drawable/img_week_0" />

    <LinearLayout
        android:layout_width="@dimen/dnt_week_size"
        android:layout_height="@dimen/dnt_week_size"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_week_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_week_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>