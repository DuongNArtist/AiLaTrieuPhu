<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_play_screen"
            android:layout_width="@dimen/dnt_play_width"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:contentDescription="@drawable/bkg_question"
            android:src="@drawable/bkg_question" />

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/fl_play_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_play_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@drawable/ic_launcher"
                    android:src="@drawable/ic_launcher"
                    android:visibility="gone" />

                <VideoView
                    android:id="@+id/vv_play_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_play_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_play_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dnt_margin"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/dnt_play_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="@dimen/dnt_margin"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_play_timer"
                android:layout_width="@dimen/dnt_play_icon_size"
                android:layout_height="@dimen/dnt_play_icon_size"
                android:layout_gravity="center_vertical"
                android:contentDescription="@drawable/img_timer"
                android:src="@drawable/img_timer" />

            <TextView
                android:id="@+id/tv_play_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dnt_text_play_margin"
                android:layout_marginStart="@dimen/dnt_text_play_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_play_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dnt_text_play_margin"
                android:layout_marginRight="@dimen/dnt_text_play_margin"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFDB4C"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_play_money"
                android:layout_width="@dimen/dnt_play_icon_size"
                android:layout_height="@dimen/dnt_play_icon_size"
                android:layout_gravity="end|center_vertical"
                android:contentDescription="@drawable/img_money"
                android:src="@drawable/img_money" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_play_index"
            android:layout_width="@dimen/dnt_play_index_size"
            android:layout_height="@dimen/dnt_play_index_size"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:padding="@dimen/dnt_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </FrameLayout>

    <Button
        android:id="@+id/bt_play_option_0"
        android:layout_width="@dimen/dnt_play_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_option"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bt_play_option_1"
        android:layout_width="@dimen/dnt_play_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_option"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bt_play_option_2"
        android:layout_width="@dimen/dnt_play_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_option"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bt_play_option_3"
        android:layout_width="@dimen/dnt_play_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_option"
        android:textColor="@android:color/white" />

</LinearLayout>