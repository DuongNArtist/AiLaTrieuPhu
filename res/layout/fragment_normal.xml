<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_main"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/ll_fragment_normal_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_normal_logo"
                android:layout_width="@dimen/dnt_logo_size"
                android:layout_height="@dimen/dnt_logo_size"
                android:contentDescription="@drawable/img_logo_en"
                android:src="@drawable/img_logo_en" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/bt_fragment_normal_quit"
                    android:layout_width="@dimen/dnt_helper_size"
                    android:layout_height="@dimen/dnt_helper_size"
                    android:background="@drawable/btn_quit" />

                <Button
                    android:id="@+id/bt_fragment_normal_helper_0"
                    android:layout_width="@dimen/dnt_helper_size"
                    android:layout_height="@dimen/dnt_helper_size"
                    android:layout_margin="@dimen/dnt_margin"
                    android:background="@drawable/btn_fifty" />

                <Button
                    android:id="@+id/bt_fragment_normal_helper_1"
                    android:layout_width="@dimen/dnt_helper_size"
                    android:layout_height="@dimen/dnt_helper_size"
                    android:background="@drawable/btn_buddy" />

                <Button
                    android:id="@+id/bt_fragment_normal_helper_2"
                    android:layout_width="@dimen/dnt_helper_size"
                    android:layout_height="@dimen/dnt_helper_size"
                    android:layout_margin="@dimen/dnt_margin"
                    android:background="@drawable/btn_audience" />

                <Button
                    android:id="@+id/bt_fragment_normal_helper_3"
                    android:layout_width="@dimen/dnt_helper_size"
                    android:layout_height="@dimen/dnt_helper_size"
                    android:background="@drawable/btn_advisor" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/fragment_play" />
        </LinearLayout>

        <include
            android:layout_width="200dp"
            android:layout_height="match_parent"
            layout="@layout/layout_guide"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>