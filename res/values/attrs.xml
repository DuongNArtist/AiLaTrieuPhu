    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" format="integer" />
        <attr name="shadowWidth" format="integer" />
        <attr name="borderColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ButtonHorizontal">
        <attr name="leftImg" format="reference|color" />
